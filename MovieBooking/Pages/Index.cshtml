@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">            
            <img src="~/images/DevVsTest.png" alt="Developers Vs Testers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Developers Vs Testers                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Cers.png" alt="The C#ers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The C#ers                  
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/DayInTheLifeOfNETDeveloper.png" alt="A day in the life of .NET developer" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    A day in the life of .NET developer                    
                </p>
            </div>
        </div>        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h3>Quick booking</h3>
    <br/>
    <form method="post">
        <label for="@Model.SelectedMovieId">Select Movie:</label>
        <select class="form-control" asp-for="@Model.SelectedMovieId" asp-items="@(new SelectList(Model.Movies,"Id","Title"))">         
        </select>
        <br />
        <input type="submit" value="Book" />
    </form>
</div>
